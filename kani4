CREATE TABLE vehicles (
    vehicle_id INT AUTO_INCREMENT PRIMARY KEY,
    vehicle_name VARCHAR(100),
    vehicle_type VARCHAR(50),
    model_year INT
);
package vehicle;

import java.sql.*;
import java.util.Scanner;

public class VehicleManagementSystem {

    static Scanner sc = new Scanner(System.in);

    public static void main(String[] args) {
        int choice;

        do {
            System.out.println("\n===== VEHICLE MANAGEMENT SYSTEM =====");
            System.out.println("1. Add Vehicle");
            System.out.println("2. View Vehicles");
            System.out.println("3. Update Vehicle");
            System.out.println("4. Delete Vehicle");
            System.out.println("5. Exit");
            System.out.print("Enter choice: ");
            choice = sc.nextInt();

            switch (choice) {
                case 1: addVehicle(); break;
                case 2: viewVehicles(); break;
                case 3: updateVehicle(); break;
                case 4: deleteVehicle(); break;
                case 5: System.out.println("Goodbye!"); break;
                default: System.out.println("Invalid choice!");
            }

        } while (choice != 5);
    }

    
    public static void addVehicle() {
        try {
            Connection con = DBConnection.getConnection();
            String sql = "INSERT INTO vehicles(vehicle_name, vehicle_type, model_year) VALUES(?, ?, ?)";

            PreparedStatement pst = con.prepareStatement(sql);

            sc.nextLine();
            System.out.print("Enter Vehicle Name: ");
            String name = sc.nextLine();

            System.out.print("Enter Vehicle Type (Car/Bike/Truck/etc): ");
            String type = sc.nextLine();

            System.out.print("Enter Model Year: ");
            int year = sc.nextInt();

            pst.setString(1, name);
            pst.setString(2, type);
            pst.setInt(3, year);

            pst.executeUpdate();
            System.out.println("Vehicle Added Successfully!");

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }


    public static void viewVehicles() {
        try {
            Connection con = DBConnection.getConnection();
            ResultSet rs = con.createStatement().executeQuery("SELECT * FROM vehicles");

            System.out.println("\n------ VEHICLE LIST ------");
            while (rs.next()) {
                System.out.println(
                        "ID: " + rs.getInt("vehicle_id") +
                        " | Name: " + rs.getString("vehicle_name") +
                        " | Type: " + rs.getString("vehicle_type") +
                        " | Model Year: " + rs.getInt("model_year")
                );
            }

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }

    public static void updateVehicle() {
        try {
            Connection con = DBConnection.getConnection();
            System.out.print("Enter Vehicle ID to Update: ");
            int id = sc.nextInt();
            sc.nextLine();

            System.out.print("Enter New Vehicle Name: ");
            String name = sc.nextLine();

            System.out.print("Enter New Vehicle Type: ");
            String type = sc.nextLine();

            System.out.print("Enter New Model Year: ");
            int year = sc.nextInt();

            String sql = "UPDATE vehicles SET vehicle_name=?, vehicle_type=?, model_year=? WHERE vehicle_id=?";
            PreparedStatement pst = con.prepareStatement(sql);

            pst.setString(1, name);
            pst.setString(2, type);
            pst.setInt(3, year);
            pst.setInt(4, id);

            int rows = pst.executeUpdate();

            if (rows > 0)
                System.out.println("Vehicle Updated Successfully!");
            else
                System.out.println("Vehicle ID Not Found!");

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }

  
    public static void deleteVehicle() {
        try {
            Connection con = DBConnection.getConnection();
            System.out.print("Enter Vehicle ID to Delete: ");
            int id = sc.nextInt();

            String sql = "DELETE FROM vehicles WHERE vehicle_id=?";
            PreparedStatement pst = con.prepareStatement(sql);
            pst.setInt(1, id);

            int rows = pst.executeUpdate();

            if (rows > 0)
                System.out.println("Vehicle Deleted Successfully!");
            else
                System.out.println("Vehicle ID Not Found!");

        } catch (Exception e) {
            System.out.println("Error: " + e);
        }
    }
}

